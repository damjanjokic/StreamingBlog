<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit your blog</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/streams/<%=stream._id%>?_method=PUT" method="POST">
                <div class="form-group"><input class="form-control" type="text" name="stream[name]" value="<%=stream.name%>" required></div>
                <div class="form-group"><input class="form-control" type="text" name="stream[image]" value="<%=stream.image%>" required></div>
                <div class="form-group"><textarea class="form-control" type="text" name="stream[description]" required><%=stream.description%></textarea></div>
                <div class="form-group"><button class="btn btn-large btn-primary btn-block">Submit!</button></div>
            </form>
            <a href="/streams">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>

